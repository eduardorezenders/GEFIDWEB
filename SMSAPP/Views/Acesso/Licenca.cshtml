@model SMSAPP.ViewModels.LicencaVM
@{
    ViewBag.Title = "Licença";
}

<h3>Informe sua Licença!</h3>
<br />
<br />

@using (Html.BeginForm("Licenca","Acesso",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.chave, "Licença:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.chave, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.chave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar Licença!" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
